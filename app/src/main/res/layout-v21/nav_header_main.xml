<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/img_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_with_button"
        android:shadowColor="@color/light_red"
        android:shadowDy="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_avatar1"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            app:civ_shadow_color="@color/black"
            app:civ_shadow_radius="2"
            android:backgroundTint="@color/white"
            app:civ_border="false"
            android:src="@drawable/yuk_uz"
            app:civ_shadow="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Mukhammadjon Tokhirov"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+998935741369"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>