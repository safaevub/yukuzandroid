<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/request_order_list_item_title_id"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/default_req_title" />

    <TextView
        android:id="@+id/request_order_list_item_picked_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingRight="4dp"
        android:text="By Mukhammadjon Tokhirov" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/request_order_list_item_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/def_description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/color_line" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="weight:" />

            <TextView
                android:id="@+id/request_order_list_item_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="45 kg" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="Deadline:" />

            <TextView
                android:id="@+id/request_order_list_item_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="12/12/2017" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="From:" />

            <TextView
                android:id="@+id/request_order_list_item_add1"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="2"
                android:maxLines="3"
                android:singleLine="false"
                android:text="@string/default_source_address" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dip"
                android:text="To:" />

            <TextView
                android:id="@+id/request_order_list_item_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="2"
                android:maxLines="3"
                android:singleLine="false"
                android:text="@string/default_source_address" />

        </TableRow>
    </TableLayout>
</LinearLayout>