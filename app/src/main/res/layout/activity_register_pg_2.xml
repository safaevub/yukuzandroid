<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.utkur.yukuzapp.RegisterActivity_2">

    <ImageButton
        android:id="@+id/number_close_buttonXML"
        android:src="@mipmap/close_icon"
        android:backgroundTint="@color/white"
        tools:ignore="ContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textSize="27sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/Mobile_number"/>

    <EditText
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/user_mobile_numberXML"
            android:inputType="numberDecimal"
            android:hint="@string/mobile_number_hint"
            android:textSize="22sp"
        android:textAlignment="center"
            android:background="@color/loginEditorBg"
             />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_next_stepXML"
        android:src="@mipmap/next_step"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        tools:ignore="ContentDescription"
        android:backgroundTint="@color/white"
        />



</LinearLayout>
